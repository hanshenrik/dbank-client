<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="@string/pref_key_ip"
        android:title="@string/pref_title_ip"
        android:defaultValue="@string/pref_default_ip"
        android:selectAllOnFocus="true"
        android:inputType="phone"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="@string/pref_key_port"
        android:title="@string/pref_title_port"
        android:defaultValue="@string/pref_default_port"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="@string/pref_key_username"
        android:title="@string/pref_title_username"
        android:defaultValue="@string/pref_default_username"
        android:selectAllOnFocus="true"
        android:inputType="text" />

    <EditTextPreference
        android:key="@string/pref_key_password"
        android:title="@string/pref_title_password"
        android:selectAllOnFocus="true"
        android:inputType="textPassword" />

</PreferenceScreen>
